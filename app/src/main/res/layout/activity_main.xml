<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
        <!-- 容器 -->

    <FrameLayout
        android:id="@+id/gui_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/dynamic_island_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="24dp">
        </FrameLayout>

        <FrameLayout
            android:id="@+id/float_ball_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

        <FrameLayout
            android:id="@+id/menus_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
        </FrameLayout>

        <FrameLayout
            android:id="@+id/shortcuts_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

        <FrameLayout
            android:id="@+id/arraylist_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

    </FrameLayout>

    <ScrollView
        android:id="@+id/debug_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="8dp"
        android:background="#E0FFFFFF"
        android:elevation="8dp"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GUI 控制"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_start"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="显示 GUI"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btn_stop"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="隐藏 GUI"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="灵动岛测试"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_test_progress"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="测试进度"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btn_test_switch"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="测试开关"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btn_hide_all"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="隐藏全部"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Arraylist 测试"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_toggle_arraylist"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="切换 Arraylist"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btn_add_random_module"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="添加随机"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btn_remove_random_module"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="移除随机"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btn_reset_arraylist"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="重置"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="设置"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:hint="用户名"
                android:text="User"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缩放"
                android:textSize="10sp" />
                
                <!-- 缩放我推荐是不要用，难搞 -->

            <SeekBar
                android:id="@+id/seek_scale"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:max="150"
                android:progress="70" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="保存设置"
                android:textSize="11sp" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_toggle_debug"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:layout_margin="8dp"
        android:elevation="8dp"
        android:text="M"
        android:textSize="6sp" />
        
        <!-- 爱慕超人 -->

</FrameLayout>